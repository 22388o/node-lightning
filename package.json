{
  "name": "lightnode",
  "version": "0.1.0",
  "description": "Node.js implementation of the Bitcoin Lightning Network",
  "scripts": {
    "start": "cd packages/daemon; npm run start",
    "bootstrap": "lerna bootstrap --hoist",
    "lint": "eslint packages",
    "test": "mocha --recursive \"packages/**/__tests__/**/*.spec.js\"",
    "test:coverage": "nyc --reporter=lcov --reporter=text mocha --recursive \"packages/**/__tests__/**/*.spec.js\"",
    "ci": "npm run lint && npm run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "keywords": [
    "lightning-network",
    "bitcoin"
  ],
  "author": "Brian Mancini <bmancini@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.14.1",
    "lerna": "^3.13.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "sinon": "^7.2.6"
  }
}
